@model List<EmployeeViewModel>
@{
    ViewBag.Title = "Employee List";
    var page = ViewBag.Page ?? 1;
    var pageSize = ViewBag.PageSize ?? 10;
    var totalRecords = ViewBag.TotalRecords ?? 0;
    var totalPages = (int)Math.Ceiling((double)totalRecords / pageSize);
}

<h2>Employee List</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="searchName" value="@ViewBag.SearchName" placeholder="Search by Name" class="form-control" />
        </div>
        <div class="col-md-4">
            <input type="text" name="title" value="@ViewBag.Title" placeholder="Search by Title" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
        <div class="col-md-2 text-end">
            <a asp-action="Add" class="btn btn-success">Add Employee</a>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Title (Current)</th>
            <th>Current Salary</th>
            <th>SSN</th>
            <th>Phone</th>
            <th>City</th>
            <th>State</th>
            <th>Join Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="10" class="text-center">No employees found.</td>
            </tr>
        }
        else
        {
            @foreach (var emp in Model)
            {
                var currentSalary = emp.Salaries
                .OrderByDescending(s => s.FromDate)
                .FirstOrDefault();

                <tr>
                    <td>@emp.EmployeeId</td>
                    <td>@emp.Name</td>
                    <td>@(currentSalary?.Title ?? "N/A")</td>
                    <td>@(currentSalary?.Salary.ToString("C") ?? "N/A")</td>
                    <td>@emp.SSN</td>
                    <td>@emp.Phone</td>
                    <td>@emp.City</td>
                    <td>@emp.State</td>
                    <td>@emp.JoinDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@emp.EmployeeId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@emp.EmployeeId" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav>
        <ul class="pagination">
            @for (var i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-pageSize="@pageSize"
                       asp-route-searchName="@ViewBag.SearchName"
                       asp-route-title="@ViewBag.Title">@i</a>
                </li>
            }
        </ul>
    </nav>
}
